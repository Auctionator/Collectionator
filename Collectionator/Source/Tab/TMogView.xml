<Ui>
  <Frame
    name="CollectionatorTMogViewTemplate"
    mixin="CollectionatorTMogViewMixin"
    virtual="true"
  >
    <Anchors>
      <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
      <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
    </Anchors>
    <Scripts>
      <OnLoad method="OnLoad"/>
      <OnShow method="OnShow"/>
      <OnHide method="OnHide"/>
    </Scripts>
    <Frames>

      <Frame inherits="CollectionatorTMogScannerFrameTemplate" parentKey="Scanner">
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="ShowAllItems">
        <KeyValues>
          <KeyValue key="labelText" value="COLLECTIONATOR_L_TMOG_SHOW_ALL_SOURCES" type="global" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" y="90" x="20"/>
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="LEFT" x="300"/>
        </Anchors>
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="CharacterOnly">
        <KeyValues>
          <KeyValue key="labelText" value="COLLECTIONATOR_L_TMOG_ONLY_THIS_CHARACTER" type="global" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ShowAllItems" relativePoint="BOTTOMLEFT"/>
          <Anchor point="RIGHT" relativeKey="$parent.ShowAllItems" relativePoint="RIGHT"/>
        </Anchors>
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="UniquesOnly">
        <KeyValues>
          <KeyValue key="labelText" value="COLLECTIONATOR_L_TMOG_UNIQUES" type="global" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ShowAllItems" relativePoint="TOPRIGHT"/>
          <Anchor point="RIGHT" relativeKey="$parent" relativePoint="LEFT" x="600"/>
        </Anchors>
      </Frame>
      <Button parentKey="RefreshButton" inherits="RefreshButtonTemplate">
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent" x="-44" y="65"/>
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent().DataProvider:Refresh()
          </OnClick>
        </Scripts>
      </Button>

      <Frame parentKey="DataProvider" mixin="CollectionatorTMogDataProviderMixin">
        <Scripts>
          <OnLoad method="OnLoad"/>
          <OnShow method="OnShow"/>
          <OnUpdate method="OnUpdate"/>
        </Scripts>
      </Frame>

      <Frame parentKey="ResultsListing" inherits="AuctionatorResultsListingTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="20" y="24"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="45"/>
        </Anchors>
      </Frame>

      <Frame parentKey="ResultsListingInset" inherits="AuctionatorInsetTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ResultsListing" relativePoint="TOPLEFT" x="-24" y="-25"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent.ResultsListing" relativePoint="BOTTOMRIGHT"/>
        </Anchors>
      </Frame>
    </Frames>
    <Layers>
      <Layer>
        <FontString parentKey="NoFullScanText" inherits="GameFontNormal" text="COLLECTIONATOR_L_NEED_A_FULL_SCAN">
          <Anchors>
            <Anchor point="CENTER" relativeKey="$parent.ResultsListing" relativePoint="CENTER"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
