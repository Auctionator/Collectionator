<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <Frame
    name="HuntingTabFrameTemplate"
    virtual="true"
    parentKey="HuntingTabFrame"
    mixin="HuntingTabMixin"
    hidden="true"
  >
    <Anchors>
      <Anchor point="TOP" relativeKey="$parent.CategoriesList" relativePoint="TOP" y="-30"/>
      <Anchor point="LEFT" x="4"/>
      <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-4" y="27" />
    </Anchors>

    <Frames>
      <Button inherits="UIPanelDynamicResizeButtonTemplate" text="Process FS" parentKey="ProcessFS">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" y="50" x="10" />
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent():ProcessFSClicked()
          </OnClick>
        </Scripts>
      </Button>

      <Button inherits="RefreshButtonTemplate">
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent" x="-44" y="65"/>
        </Anchors>
        <Scripts>
          <OnClick>
            self:GetParent().DataProvider:Refresh()
          </OnClick>
        </Scripts>
      </Button>

      <Frame parentKey="DataProvider" mixin="HuntingDataProviderMixin">
        <Scripts>
          <OnLoad method="OnLoad"/>
          <OnUpdate method="OnUpdate"/>
        </Scripts>
      </Frame>

      <Frame parentKey="ResultsListing" inherits="AuctionatorResultsListingTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="4" y="24"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="-20" y="45"/>
        </Anchors>
      </Frame>

      <Frame parentKey="HistoricalPriceInset" inherits="AuctionatorInsetTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ResultsListing" relativePoint="TOPLEFT" x="-5" y="-25"/>
          <Anchor point="BOTTOMRIGHT" relativeKey="$parent.ResultsListing" relativePoint="BOTTOMRIGHT"/>
        </Anchors>
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="ShowAllItems">
        <KeyValues>
          <KeyValue key="labelText" value="Show all sources" type="string" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ResultsListing" relativePoint="BOTTOMLEFT" y="-10" x="20"/>
          <Anchor point="RIGHT" relativeKey="$parent.ResultsListing" relativePoint="LEFT" x="300"/>
        </Anchors>
      </Frame>

      <Frame inherits="AuctionatorConfigurationCheckbox" parentKey="CharacterOnly">
        <KeyValues>
          <KeyValue key="labelText" value="TMogs for this character only" type="string" />
        </KeyValues>
        <Anchors>
          <Anchor point="TOPLEFT" relativeKey="$parent.ShowAllItems" relativePoint="TOPRIGHT" x="20"/>
          <Anchor point="RIGHT" relativeKey="$parent.ShowAllItems" relativePoint="RIGHT" x="300"/>
        </Anchors>
      </Frame>
    </Frames>
    <Scripts>
      <OnLoad method="OnLoad"/>
    </Scripts>
  </Frame>
</Ui>
